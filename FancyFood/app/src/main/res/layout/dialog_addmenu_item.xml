<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:padding="10dp">

    <TextView
        android:id="@+id/heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/lemonada_semibold"
        android:text="Add Menu Item"
        android:padding="20dp"
        android:background="@drawable/background"
        android:layout_margin="5dp"
        android:textColor="#ffffff"
        android:textSize="20dp" />
    <ImageView
        android:id="@+id/dish_item"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_below="@+id/heading"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        android:layout_margin="5dp"/>
    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dish_item"
        android:layout_marginTop="20dp">
    <TextView
        android:id="@+id/edt_browse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Photo Of Item"
        android:layout_centerVertical="true"
        android:textColor="#000000"

        android:layout_margin="5dp"/>

    </LinearLayout>
    <Button
        android:id="@+id/btn_browse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Browse"
        android:layout_below="@+id/dish_item"

        android:layout_margin="5dp"
        android:layout_alignParentEnd="true"
        />


    <TextView
        android:id="@+id/txt_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear"
        android:text="Enter Dish Name"
        android:textColor="#000000"
        android:layout_marginTop="10dp"
        android:layout_margin="5dp"
        />
    <EditText
        android:id="@+id/edt_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_name"
        android:layout_margin="5dp"
        android:hint="Dish Name"/>
    <TextView
        android:id="@+id/txt_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edt_name"
        android:text="Enter Price in Rupees"
        android:layout_margin="5dp"
        android:textColor="#000000"/>
    <EditText
        android:id="@+id/edt_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Price In Rupees"
        android:inputType="number"
        android:layout_margin="5dp"
        android:layout_below="@+id/txt_price"/>
    <Button
        android:id="@+id/add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/edt_price"
        android:layout_margin="5dp"
        android:text="Add"
        />
    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/add"
        android:layout_below="@+id/edt_price"
        android:layout_margin="5dp"
        android:text="Cancel"
        android:backgroundTint="#F81A0A"/>


</RelativeLayout>
